@model RegistrationViewModel

<div class="w-100 m-1">
    <div class="d-flex justify-content-center">
        <form method="post" class="form m-3 p-4 col-md-6 border border-light shadow-sm">
            <h3 class="text-muted">Account Registration</h3>
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="User">User Email</label>
                <input class="form-control" asp-for="User" />
                <span class="text-danger" asp-validation-for="User"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input class="form-control" asp-for="ConfirmPassword" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
